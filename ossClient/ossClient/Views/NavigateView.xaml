<UserControl x:Class="OssClientMetro.Views.NavigateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             Width="300" Height="600">
    <Grid>
        <ListBox  x:Name="buckets" SelectedIndex="{Binding selectedBuketIndex}" cal:Message.Attach="[Event SelectionChanged] = [Action Publish()]"  Margin="0,0,0,197">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"  
                                   Margin='2 0 12 0'   
                                   FontSize='30' />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="createBucket" Content="create" HorizontalAlignment="Left" Height="27" Margin="23,482,0,0" VerticalAlignment="Top" Width="106"/>
        <Button x:Name="deleteBucket" Content="delete" HorizontalAlignment="Left" Height="27" Margin="159,482,0,0" VerticalAlignment="Top" Width="106"/>
        <TextBox x:Name="inputBucketName" HorizontalAlignment="Left" Height="27" Margin="37,430,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="201" />
    </Grid>
</UserControl>
